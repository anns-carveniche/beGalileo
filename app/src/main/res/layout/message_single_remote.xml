<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/bubble_out"
      android:layout_alignParentStart="true"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="10dp"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remote Message"
        android:id="@+id/message_text"
        android:gravity="start"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/message_horizontal_margin"
        android:layout_marginRight="@dimen/message_horizontal_margin"
        android:layout_marginTop="@dimen/message_vertical_margin"
        android:layout_marginBottom="@dimen/message_vertical_margin" />
  </LinearLayout>


</RelativeLayout>