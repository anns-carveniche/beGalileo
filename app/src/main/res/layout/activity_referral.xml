<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/quantum_yellow"
    tools:context=".view.activity.ReferralActivity">

    <WebView
        android:id="@+id/wv_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/wv_option_1"
        app:layout_constraintTop_toTopOf="parent" />

    <WebView
        android:id="@+id/wv_option_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/wv_option_2"
        app:layout_constraintTop_toBottomOf="@+id/wv_question" />

    <WebView
        android:id="@+id/wv_option_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/wv_option_3"
        app:layout_constraintTop_toBottomOf="@+id/wv_option_1" />

    <WebView
        android:id="@+id/wv_option_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/wv_option_4"
        app:layout_constraintTop_toBottomOf="@+id/wv_option_2" />

    <WebView
        android:id="@+id/wv_option_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/btn_next"
        app:layout_constraintTop_toBottomOf="@+id/wv_option_3">

    </WebView>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wv_option_4" />
</androidx.constraintlayout.widget.ConstraintLayout>