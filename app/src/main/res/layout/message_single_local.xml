<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/bubble_in"
      android:layout_alignParentEnd="true"
      >
    <TextView
        android:id="@+id/message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/message_horizontal_margin"
        android:layout_marginTop="@dimen/message_vertical_margin"
        android:layout_marginRight="@dimen/message_horizontal_margin"
        android:layout_marginBottom="@dimen/message_vertical_margin"
        android:gravity="end"
        android:text="Local Message" />
  </LinearLayout>


</RelativeLayout>