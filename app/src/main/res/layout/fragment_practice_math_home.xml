<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clMainContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnProceed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="Proceed"
            android:padding="15dp"
            android:textSize="@dimen/font_size_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llNumberRow3" />

        <LinearLayout
            android:id="@+id/llSymbolRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="+"
                android:layout_margin="@dimen/practice_math_button_margin"
                android:background="@drawable/button_square_corner"
                android:textSize="@dimen/font_size_large" />

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="-"
                android:layout_margin="@dimen/practice_math_button_margin"
                android:background="@drawable/button_square_corner"
                android:textSize="@dimen/font_size_large" />

            <Button
                android:id="@+id/btnMultiplication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="*"
                android:layout_margin="@dimen/practice_math_button_margin"
                android:background="@drawable/button_square_corner"
                android:textSize="@dimen/font_size_large" />

            <Button
                android:id="@+id/btnDivision"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="%"
                android:layout_margin="@dimen/practice_math_button_margin"
                android:background="@drawable/button_square_corner"
                android:textSize="@dimen/font_size_large" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llNumberRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llSymbolRow">

            <Button
                android:id="@+id/btnNumber1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1"
                android:layout_margin="@dimen/practice_math_button_margin"
                android:background="@drawable/button_square_corner"
                android:textSize="@dimen/font_size_large" />

            <Button
                android:id="@+id/btnNumber2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="2"
                android:layout_margin="@dimen/practice_math_button_margin"
                android:background="@drawable/button_square_corner"
                android:textSize="@dimen/font_size_large" />

            <Button
                android:id="@+id/btnNumber3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="3"
                android:layout_margin="@dimen/practice_math_button_margin"
                android:background="@drawable/button_square_corner"
                android:textSize="@dimen/font_size_large" />

            <Button
                android:id="@+id/btnNumber4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="4"
                android:layout_margin="@dimen/practice_math_button_margin"
                android:background="@drawable/button_square_corner"
                android:textSize="@dimen/font_size_large" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llNumberRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llNumberRow1">

            <Button
                android:id="@+id/btnNumber5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="5"
                android:layout_margin="@dimen/practice_math_button_margin"
                android:background="@drawable/button_square_corner"
                android:textSize="@dimen/font_size_large" />

            <Button
                android:id="@+id/btnNumber6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="6"
                android:layout_margin="@dimen/practice_math_button_margin"
                android:background="@drawable/button_square_corner"
                android:textSize="@dimen/font_size_large" />

            <Button
                android:id="@+id/btnNumber7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="7"
                android:layout_margin="@dimen/practice_math_button_margin"
                android:background="@drawable/button_square_corner"
                android:textSize="@dimen/font_size_large" />

            <Button
                android:id="@+id/btnNumber8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="8"
                android:layout_margin="@dimen/practice_math_button_margin"
                android:background="@drawable/button_square_corner"
                android:textSize="@dimen/font_size_large" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llNumberRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llNumberRow2">


            <Button
                android:id="@+id/btnNumber9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="9"
                android:layout_margin="@dimen/practice_math_button_margin"
                android:background="@drawable/button_square_corner"
                android:textSize="@dimen/font_size_large" />

            <Button
                android:id="@+id/btnNumber10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="10"
                android:layout_margin="@dimen/practice_math_button_margin"
                android:background="@drawable/button_square_corner"
                android:textSize="@dimen/font_size_large" />

            <Button
                android:id="@+id/btnNumber11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="11"
                android:layout_margin="@dimen/practice_math_button_margin"
                android:background="@drawable/button_square_corner"
                android:textSize="@dimen/font_size_large" />

            <Button
                android:id="@+id/btnNumber12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="12"
                android:layout_margin="@dimen/practice_math_button_margin"
                android:background="@drawable/button_square_corner"
                android:textSize="@dimen/font_size_large" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>