<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_selected="false"
        >
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/wf_text_color" />

            <solid android:color="@color/wf_color_primary" />

            <padding
                android:left="1dp"
                android:right="1dp"
                android:bottom="1dp"
                android:top="1dp" />

            <corners android:radius="5dp" />
        </shape>
    </item>
    <item
        android:state_selected="true"
        >

        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/wf_color_primary" />

            <solid android:color="@color/wf_text_color" />

            <padding
                android:left="1dp"
                android:right="1dp"
                android:bottom="1dp"
                android:top="1dp" />

            <corners android:radius="5dp" />
        </shape>
    </item>



</selector>